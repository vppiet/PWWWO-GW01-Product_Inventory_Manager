extends layout

block content
    form(method='POST', action='')
        div.form-group
            label(for='name') Category Name: 
            input#name.form-control(type='text', placeholder='Name of product category', name='name', required='true', value=(undefined==productcategory ? '' : productcategory.name))
        div.form-group
            label(for='description') Description
            textarea(rows='3', placeholder='Details about product category', name='description')#description.form-control
        div.form-group
            button(type='submit').btn.btn-primary Submit

    if errors
        for error in errors
            div(role='alert').alert.alert-danger
                =error.msg