extends layout

block content
    div.container-fluid.my-3
        a(href='/inventory/products/create', role='button').btn.btn-primary Create Product

    table.table
        thead
            tr
                th(scope='col') Name
                th(scope='col') Category
                th(scope='col') In stock
                th(scope='col') Stock Last Updated
        each product in products
            tr
                td
                    a(href=product.url, title='Product: ' + product.name)
                        =product.name
                td
                    =product.productcategory.name
                td
                    =product.in_stock
                td
                    =product.stock_last_updated
        else
            tr.table-warning
                td(colspan=4) No products found.
